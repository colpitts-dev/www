datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Person {
  id          String       @id @default(cuid())
  name        String       @default("")
  email       String       @unique @default("")
  password    String?
  isAdmin     Boolean      @default(false)
  memberships Membership[] @relation("Membership_owner")
  profile     Profile?     @relation("Person_profile", fields: [profileId], references: [id])
  profileId   String?      @unique @map("profile")
}

model Profile {
  id                             String       @id @default(cuid())
  owner                          Person?      @relation("Person_profile")
  nickname                       String       @unique @default("")
  bio                            String       @default("")
  avatar                         String       @default("")
  from_Membership_learnerProfile Membership[] @relation("Membership_learnerProfile")
}

model Membership {
  id               String   @id @default(cuid())
  owner            Person?  @relation("Membership_owner", fields: [ownerId], references: [id])
  ownerId          String?  @map("owner")
  courses          Course[] @relation("Course_memberships")
  learnerProfile   Profile? @relation("Membership_learnerProfile", fields: [learnerProfileId], references: [id])
  learnerProfileId String?  @map("learnerProfile")

  @@index([ownerId])
  @@index([learnerProfileId])
}

model Course {
  id          String            @id @default(cuid())
  title       String            @default("")
  description String            @default("")
  slug        String            @unique @default("")
  status      CourseStatusType? @default(DRAFT)
  memberships Membership[]      @relation("Course_memberships")
  modules     Module[]          @relation("Module_course")
}

model Module {
  id          String   @id @default(cuid())
  title       String   @default("")
  description String   @default("")
  course      Course?  @relation("Module_course", fields: [courseId], references: [id])
  courseId    String?  @map("course")
  lessons     Lesson[] @relation("Lesson_module")

  @@index([courseId])
}

model Lesson {
  id          String            @id @default(cuid())
  title       String            @default("")
  description String            @default("")
  module      Module?           @relation("Lesson_module", fields: [moduleId], references: [id])
  moduleId    String?           @map("module")
  topics      Topic[]           @relation("Topic_lesson")
  status      LessonStatusType? @default(PRIVATE)

  @@index([moduleId])
}

model Topic {
  id          String  @id @default(cuid())
  title       String  @default("")
  description String  @default("")
  lesson      Lesson? @relation("Topic_lesson", fields: [lessonId], references: [id])
  lessonId    String? @map("lesson")

  @@index([lessonId])
}

enum CourseStatusType {
  DRAFT
  PUBLIC
  PRIVATE
}

enum LessonStatusType {
  PUBLIC
  PRIVATE
}
